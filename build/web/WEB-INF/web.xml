<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Controle</servlet-name>
        <servlet-class>servlet.Controle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarProdutoServlet</servlet-name>
        <servlet-class>servlet.EditarProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarAlimentoServlet</servlet-name>
        <servlet-class>servlet.EditarAlimentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>servlet.upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFornecedorServlet</servlet-name>
        <servlet-class>servlet.LoginFornecedorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadFornecedor</servlet-name>
        <servlet-class>servlet.uploadFornecedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroServicosServlet</servlet-name>
        <servlet-class>servlet.CadastroServicosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastroPetServlet</servlet-name>
        <servlet-class>servlet.CadastroPetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadPet</servlet-name>
        <servlet-class>servlet.uploadPet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controle</servlet-name>
        <url-pattern>/Controle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarProdutoServlet</servlet-name>
        <url-pattern>/EditarProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarAlimentoServlet</servlet-name>
        <url-pattern>/EditarAlimentoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginFornecedorServlet</servlet-name>
        <url-pattern>/LoginFornecedorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadFornecedor</servlet-name>
        <url-pattern>/uploadFornecedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroServicosServlet</servlet-name>
        <url-pattern>/CadastroServicosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastroPetServlet</servlet-name>
        <url-pattern>/CadastroPetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadPet</servlet-name>
        <url-pattern>/uploadPet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
